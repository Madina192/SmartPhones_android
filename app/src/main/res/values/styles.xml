<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SeeMore.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Iphone.Image" parent="Base.CardView">
        <item name="android:background">@drawable/img_iphone</item>
        <item name="cornerRadius">200dp</item>
    </style>
    <style name="RoundedImage">
        <item name="cornerSizeBottomRight">5%</item>
        <item name="cornerSizeTopRight">5%</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="RoundedImageInCart">
        <item name="cornerSize">10%</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">5dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>