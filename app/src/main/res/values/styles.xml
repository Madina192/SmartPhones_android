<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SeeMore.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Iphone.Image" parent="Base.CardView">
        <item name="android:background">@drawable/img_iphone</item>
        <item name="cornerRadius">200dp</item>
    </style>
</resources>