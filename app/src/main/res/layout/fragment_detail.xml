<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_main_bg"
    tools:context=".DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageViewImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/linear_layout_box"
            android:src="@drawable/img_samsung_galaxy"/>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_layout_box"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                >
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galaxy Note 20 Ultra"
                    android:textColor="@color/title_color"
                    android:textSize="24dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imageViewLike"
                    android:layout_width="37dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="58dp"
                    android:background="@drawable/icon_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_like"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="7dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginHorizontal="9dp"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginHorizontal="9dp"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_processor"
                        />
                    <TextView
                        android:id="@+id/textViewProcessor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exynos 990"
                        android:textColor="@color/gray_descr"
                        android:textSize="11dp"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="47dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_camera"
                        />
                    <TextView
                        android:id="@+id/textViewCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108 + 12 mp"
                        android:textColor="@color/gray_descr"
                        android:textSize="11dp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_camera"
                        />
                    <TextView
                        android:id="@+id/textViewRam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 GB"
                        android:textColor="@color/gray_descr"
                        android:textSize="11dp"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="47dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_ssd"
                        />
                    <TextView
                        android:id="@+id/textViewSsd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256 GB"
                        android:textColor="@color/gray_descr"
                        android:textSize="11dp"
                        android:layout_marginTop="8dp"

                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select color and capacity"
                android:textColor="@color/title_color"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginStart="36dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_check"
                    android:background="@drawable/choose_color_brown"
                    android:padding="11dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_check"
                    android:background="@drawable/choose_color_dark_blue"
                    android:padding="11dp"
                    android:layout_marginStart="19dp"
                    />
                <TextView
                    android:layout_width="71dp"
                    android:layout_height="30dp"
                    android:text="128 GB"
                    android:background="@drawable/button_orange_bg"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginStart="58dp"
                    />
                <TextView
                    android:layout_width="71dp"
                    android:layout_height="30dp"
                    android:text="256 GB"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_ssd"
                    android:gravity="center"
                    android:layout_marginStart="21dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="54dp"
                android:background="@drawable/button_orange_bg"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Add to Cart"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="45dp"
                    />
                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="$1,500.00"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="61dp"
                    />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</FrameLayout>